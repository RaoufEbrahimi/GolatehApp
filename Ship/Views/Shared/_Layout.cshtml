@using Ship.Model.ViewModel

@{
    var SiteSet = SiteSettingBLL.GetListSiteSetting().First();

    string Path = System.Web.HttpContext.Current.Request.Url.AbsolutePath;
    System.IO.FileInfo Info = new System.IO.FileInfo(Path);
    string pageName = Info.Name;
}
<!DOCTYPE html>
<html class="no-js" lang="fa">
<head>
    @RenderSection("ContentOptimization", false)
    @RenderSection("css", required: false)
    @RenderSection("js_top", required: false)
    <!-- CSS here -->
    @Styles.Render("~/bundles/css/SiteGolatehCSS")
</head>
<body>
    <div id="preloader">
        <div class="preloader">
            <span></span>
            <span></span>
        </div>
    </div>
    <header id="header-sticky" class="transparent-header">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="main-menu">
                        <nav class="navbar navbar-expand-lg">
                            <a href="/" class="navbar-brand">
                                <img src="@SiteSet.Logo" alt="@SiteSet.Title" style="width: 145px;">
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                                <span class="navbar-icon"></span>
                                <span class="navbar-icon"></span>
                                <span class="navbar-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav ml-auto">
                                    @if (pageName.ToLower() == "register" || pageName.ToLower() == "loginadmin")
                                    {
                                        <li class="nav-item active">
                                            <a class="nav-link" href="/">خانه</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/">درباره ما</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/">ویژگی ها</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/">تصاویر</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/">قیمت ها</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/">بلاگ</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/">تماس</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item active">
                                            <a class="nav-link" href="#home">خانه</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#about">درباره ما</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#features">چرا ما</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#workprocess">کار با گلاته</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#screenshots">ویژگی ها</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#features2">گزارشات</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#faqs">سوالات متداول</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#contact">تماس</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="header-btn d-none d-xl-block">
                                @if (User.Identity.IsAuthenticated == false)
                                {
                                    <a style="font-size: 12px;" href="/home/register" class="btn transparent-btn">ثبت نام</a>
                                    <a style="font-size: 12px;" href="/loginadmin" class="btn transparent-btn">ورود</a>
                                }
                                else
                                {
                                    if (User.Identity.Name.Contains("TankhaGardan"))
                                    {
                                        <a style="font-size: 12px;" href="/tankha" class="btn transparent-btn">بخش مدیریت</a>
                                        <a style="font-size: 12px;" href="/LoginAdmin/LogOut" class="btn transparent-btn">خروج</a>
                                    }
                                    else
                                    {
                                        <a style="font-size: 12px;" href="/admin" class="btn transparent-btn">بخش مدیریت</a>
                                        <a style="font-size: 12px;" href="/LoginAdmin/LogOut" class="btn transparent-btn">خروج</a>
                                    }
                                }
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>

    <footer class="footer-bg" style="background-image:url(@SiteSettings.CDN/Content/theme/site/img/bg/footer_bg.jpg)">
        <div class="footer-top pt-50 pb-45">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-8 col-lg-9 text-center">

                        <div class="footer-logo mb-25">
                            <a href="#"><img src="@SiteSet.Logo" alt="img" title="سیستم گلاته"></a>
                        </div>
                        <div class="footer-text">
                            <p>سیستم گلاته اولین و تنها سیستم جامع مالی است که بر اساس محاسبات سنتی صیادان طراحی شده و نیاز ها و چالش های صیادان سنتی را به صورت کاملا مدرن برطرف می سازد.</p>
                            <br />
                            <a referrerpolicy="origin" target="_blank" href="https://trustseal.enamad.ir/?id=279742&amp;Code=zmogdmTOjazEhR6glpuh"><img referrerpolicy="origin" src="https://Trustseal.eNamad.ir/logo.aspx?id=279742&amp;Code=zmogdmTOjazEhR6glpuh" alt="" style="cursor:pointer;background-color: floralwhite;border-radius: 15px;" id="zmogdmTOjazEhR6glpuh"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright-wrap pt-20 pb-20">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-12">
                        <div class="copyright-text text-center">
                            <p>
                                کلیه حقوق مادی و معنوی این وب سایت متعلق به شرکت هوی موی بوشهر است. (© 1401)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/js/SiteGolatehJS")
    @RenderSection("js_down", required: false)
