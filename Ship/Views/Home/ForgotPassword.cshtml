    <script>
        function ResetPassword() {


            $.ajax({
                type: 'POST',
                url: '/LoginAdmin/ResetPassword',
                data: { nationalcode: $('#nationalcode').val(), mobile: $('#mobile').val() },
                success: function (dataa) {

                    if (dataa == 1) {
                        $('#DivMsg').html("<div class='col' style='margin-top: 20px;'><div class='card radius-10 bg-success'><div class='card-body'><div class='d-flex align-items-center'><div>	<h4 class='my-1 text-white' style='font-size: 15px;'>&#1585;&#1605;&#1586; &#1593;&#1576;&#1608;&#1585; &#1576;&#1575; &#1605;&#1608;&#1601;&#1602;&#1740;&#1578; &#1575;&#1585;&#1587;&#1575;&#1604; &#1588;&#1583;</h4>	</div>	</div>		</div>	</div>	</div>");

                        setTimeout(function(){
                            window.location.href = '/loginadmin';
                        }, 5000);
                    } else {
                        Lobibox.notify('error',
                            {
                                pauseDelayOnHover: true,
                                continueDelayOnInactiveTab: false,
                                position: 'top right',
                                icon: 'bx bx-x-circle',
                                msg: 'اطلاعات وارد شده اشتباه است'
                            });
                    }

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    Lobibox.notify('error',
                        {
                            pauseDelayOnHover: true,
                            continueDelayOnInactiveTab: false,
                            position: 'top right',
                            icon: 'bx bx-x-circle',
                            msg: 'خطا در عملکرد سرور، لطفا دقایقی دیگر دوباره تلاش کنید.'
                        });
                }
            });


        }

    </script>


    <script>
        (() => {
            'use strict';

            const
                root = (() => {
                    if (typeof self == 'object' && self.self === self) return self;
                    else if (typeof global == 'object' && global.global === global) return global;
                    else return this;
                })(),

                persianNumberArr = [/۰/g, /۱/g, /۲/g, /۳/g, /۴/g, /۵/g, /۶/g, /۷/g, /۸/g, /۹/g],
                arabicNumberArr = [/٠/g, /١/g, /٢/g, /٣/g, /٤/g, /٥/g, /٦/g, /٧/g, /٨/g, /٩/g],
                fixPersianNumber = str => {
                    if (typeof str === 'string') {
                        let i = 0;
                        for (; i < 10; i++) {
                            str = str.replace(persianNumberArr[i], i).replace(arabicNumberArr[i], i);
                        }
                    }
                    return str;
                };

            root.fixPersianNumber = fixPersianNumber;
        })();


        $(document).ready(function () {
            $('input').keyup(function () {
                this.value = fixPersianNumber(this.value);
            });
        });
    </script>


