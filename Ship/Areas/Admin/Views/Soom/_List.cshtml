@model List<Ship.Model.ViewModel.Admin.GetListSoomViewModel>





<div class="table-responsive" style="margin-top: 20px;">
    <table id="TableSoom" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th style="text-align: center">نام صوم</th>
                <th style="text-align: center">تاریخ رفت</th>
                <th style="text-align: center">تاریخ برگشت</th>
                <th style="text-align: center">تعداد سفر</th>
                <th style="text-align: center">توضیحات</th>
                <th style="text-align: center">بستن صوم</th>
                <th style="text-align: center">عملیات</th>
            </tr>
        </thead>
        @foreach (var cc in Model)
        {
            <tr>
                <td style="text-align: center">@cc.SoomName</td>
                <td style="text-align: center">@cc.FromDate</td>
                <td style="text-align: center">@cc.ToDate</td>
                <td style="text-align: center">@cc.TedadSafar</td>
                <td style="text-align: justify">@cc.Tozihat</td>
                <td style="text-align: center">
                    <div class="form-check">
                        <center>
                            @if (cc.IsActive)
                            {
                                <button type="button" onclick="CloseSoom(this, @cc.Id)" class="btn btn-success" id="Cheke_@cc.Id" data-openclose="false"><i class="fadeIn animated bx bx-calculator"></i> بستن و محاسبه گلاته </button>
                            }
                            else
                            {
                                <button onclick="CloseSoom(this, @cc.Id)" type="button" class="btn btn-danger" id="Cheke_@cc.Id" data-openclose="true"><i class="fadeIn animated bx bx-book-open"></i> باز کردن و حذف محاسبات </button>
                            }
                        </center>
                    </div>
                </td>
                <td style="text-align: center">
                    <button type="button" style="margin-bottom: 5px;" class="btn btn-primary" onclick="location.href='/admin/Safar?id=@cc.Id'"><i class="fadeIn animated bx bxs-ship"></i> سفر</button>

                    @if (cc.IsActive)
                    {
                        <button style="margin-bottom: 5px;" onclick="ToEdit(@cc.Id)" type="button" class="btn btn-warning"><i class="fadeIn animated bx bx-edit-alt"></i> ویرایش صوم </button>
                        <button style="margin-bottom: 5px;" onclick="ToDelete(@cc.Id)" type="button" class="btn btn-danger"><i class="fadeIn animated bx bx-x-circle"></i> حذف صوم </button>
                    }
                    else
                    {
                        <a class="btn btn-info" style="margin-bottom: 5px; cursor: pointer " onclick="ToPrintSoom(@cc.Id)"><i class="lni lni-printer"></i> مشاهده حساب</a>
                        <a class="btn btn-info" style="margin-bottom: 5px; cursor: pointer " onclick="ToPrintSoomGolate(@cc.Id)"><i class="lni lni-printer"></i> فیش گلاته</a>
                    }
                </td>
            </tr>
        }
        <tbody>
        </tbody>
    </table>
</div>
