@model List<Ship.Model.ViewModel.Admin.GetListShipViewModel>



<div class="row" style="margin: auto;">
    @foreach (var cc in Model)
    {
        <div class="col-md-6" style="margin: auto;">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <div class="mt-3" onclick="window.location.href = '/admin/ship/myship?id=@cc.Id'">
                            <h4>@cc.Title @if (cc.IsEnded == false) {<i class="bx bxs-check-circle" style="color: #2edd03; font-size: 40px;"></i> } </h4>
                        </div>
                    </div>
                    <hr class="my-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">شماره لنج</h6>
                            <span class="text-secondary">@cc.Number</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">تاریخ تولید</h6>
                            <span class="text-secondary">@cc.YearProduction</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">
                                طول
                            </h6>
                            <span class="text-secondary">@cc.Tul</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">
                                عرض
                            </h6>
                            <span class="text-secondary">@cc.Arz</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">
                                نام موتور
                            </h6>
                            <span class="text-secondary">@cc.NameMotor</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">
                                حجم موتور
                            </h6>
                            <span class="text-secondary">@cc.HajMotor</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">
                                شماره بیمه
                            </h6>
                            <span class="text-secondary">@cc.ShomareBime</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">
                                اعتبار اشتراک
                            </h6>
                            @if (cc.IsEnded == true)
                            {
                                <button type="button" onclick="window.location.href='/admin/buysubscription/buytopay?id=@cc.Id'" class="btn btn-success btn-sm">خرید اشتراک</button>
                            }
                            else
                            {
                                <span class="text-secondary">@cc.ExpireDate <i class="bx bxs-check-circle" style="color: #2edd03;"></i></span>
                            }

                        </li>
                    </ul>
                    <hr class="my-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex order-actions">
                                <a title="صوم" style="margin-left: 30px; cursor: pointer" onclick="location.href='/admin/Soom?id=@cc.Id'" class=""><i class="bx bxs-ship"></i></a>
                                <a onclick="_OpenSahamDar(@cc.Id)" class="icon-badge position-relative me-lg-5" style="margin-left: 30px;cursor: pointer; width: 35px; height: 35px; background-color: #6c757d !important; ">
                                    <i title="سهام داران" class="bx bxs-user align-middle font-22 text-white"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">@cc.TedadSahamDar</span>
                                </a>
                                <a onclick="_OpenAfrad(@cc.Id)" class="icon-badge position-relative me-lg-5" style="margin-left: 30px; cursor: pointer; width: 35px; height: 35px; background-color: #6c757d !important; ">
                                    <i title="صیادان" class="lni lni-network align-middle font-22 text-white"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">@cc.TedadAfrad</span>
                                </a>
                                <a onclick="GetListAfradYadasht()" class="icon-badge position-relative me-lg-5" style="margin-left: 30px; cursor: pointer; width: 35px; height: 35px; background-color: #6c757d !important; ">
                                    <i title="دفترچه یاداشت بدهی" class="lni lni-notepad align-middle font-22 text-white"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">@cc.Yadasht</span>
                                </a>
                                <a title="ویرایش" style="margin-right: 0px;cursor: pointer" onclick="ToEdit(@cc.Id)" class=""><i class="bx bxs-edit"></i></a>
                            </div>
                        </div>

                        @*<div class="col-2" style="text-align: center;">
                            <div class="d-flex order-actions">
                                <a title="حذف" style="cursor: pointer" onclick="ToDelete(@cc.Id)" class="ms-3"><i class="bx bxs-trash"></i></a>
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
        if (string.IsNullOrWhiteSpace(cc.Image) == false)
        {
            <div class="col-md-4" style="margin: auto;">
                <img style="width: 100%; height: 360px; border-radius: 19px; " src="@cc.Image" onerror="this.onerror = null;this.src = 'https://golateh.com/Content/images.png';">
            </div>
        }
    }
</div>