                content: 'آیا مایل به حذف لنج هستید !',
                rtl: true,
                closeIcon: true,
                buttons: {
                    confirm: {
                        text: 'تایید',
                        btnClass: 'btn-blue',
                        action: function () {
                            $.ajax({
                                type: 'POST',
                                url: '/Admin/Ship/Delete',
                                data: { Id: Id },
                                success: function (dataa) {

                                    if (Boolean(dataa) == true) {
                                        GetListShip();
                                    }
                                    else {
                                        Lobibox.notify('error', {
                                            pauseDelayOnHover: true,
                                            continueDelayOnInactiveTab: false,
