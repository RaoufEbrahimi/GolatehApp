@model List<Ship.Model.ViewModel.Admin.FileBankListViewModel>

@{
    int r = 1;

}


<div class="table-responsive" style="margin-top: 20px;">
    <table id="Tablefilebank" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th style="text-align: center">#</th>
                <th style="text-align: center">نام و نام خانوادگی</th>
                <th style="text-align: center">کد ملی</th>
                <th style="text-align: center">سمت</th>
                <th style="text-align: center">مبلغ</th>
                <th style="text-align: center">عملیات</th>
            </tr>
        </thead>
        @foreach (var cc in Model)
        {
            <tr id="Row_@cc.Id" TotalPrice="@cc.TotalPrice" AttrId="@cc.Id">
                <td style="text-align: center">
                    @(r++)
                </td>
                <td style="text-align: center">@cc.Name @cc.Family</td>
                <td style="text-align: center">@cc.NationalCode</td>
                <td style="text-align: center">@cc.Semat</td>
                <td style="text-align: center">@cc.TotalPrice.ToString("N0")</td>
                <td style="text-align: center">
                    <button style="margin-bottom: 5px;" onclick="$('#Row_@cc.Id').remove()" type="button" class="btn btn-danger"><i class="fadeIn animated bx bx-x-circle"></i> حذف </button>
                </td>
            </tr>
        }
        <tbody>
        </tbody>
    </table>
</div>

@if (Model.Any())
{
    <center>
        <button onclick="Save()" type="button" class="btn btn-outline-success position-relative">
            <i class="lni lni-circle-plus"></i>  دریافت فایل <span class="position-absolute top-0 start-100">
            </span>
        </button>
    </center>
}