@model List<Ship.Model.ViewModel.Admin.GetListSafarViewModel>


<div class="table-responsive" style="margin-top: 20px;">
    <table id="TableSafar" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr style="background-color: #dee2e6b3">
                <th style="text-align: center">عنوان</th>
                <th style="text-align: center">تاریخ رفت</th>
                <th style="text-align: center">تاریخ برگشت</th>
                <th style="text-align: center">توضیحات</th>
                <th style="text-align: center">عملیات</th>

            </tr>
        </thead>
        @foreach (var cc in Model)
        {
            <tr>
                <td style="text-align: center">@cc.Title</td>
                <td style="text-align: center">@cc.FromDate</td>
                <td style="text-align: center">@cc.ToDate</td>
                <td style="text-align: justify">@cc.Tozihat</td>
                <td style="text-align: center">
                    @if (cc.IsActive && cc.IsActiveSoom)
                    {
                        <button type="button" onclick="CloseSafar(this, @cc.Id)" class="btn btn-success" id="Cheke_@cc.Id" data-openclose="false"><i class="fadeIn animated bx bx-calculator"></i> بستن و محاسبه گلاته </button>
                        <button onclick="ToDeteilSafar(@cc.Id)" type="button" class="btn btn-warning "><i class="fadeIn animated bx bx-edit-alt"></i> ویرایش سفر </button>
                        <button onclick="ToDeleteSafar(@cc.Id)" type="button" class="btn btn-danger "><i class="fadeIn animated bx bx-x-circle"></i> حذف سفر </button>
                    }
                    else
                    {
                        if (cc.IsActiveSoom)
                        {
                            <button onclick="CloseSafar(this, @cc.Id)" type="button" class="btn btn-danger " id="Cheke_@cc.Id" data-openclose="true"><i class="fadeIn animated bx bx-book-open"></i> باز کردن و حذف محاسبات </button>
                            <button onclick="ToCopy(@cc.Id)" type="button" class="btn btn-primary "><i class="fadeIn animated bx bx-copy-alt"></i> کپی سفر </button>
                        }
                        <a class="btn btn-info " style="cursor: pointer" onclick="ToPrintSafar(@cc.Id)" target="_blank"><i class="lni lni-printer"></i> مشاهده حساب</a>
                        <a class="btn btn-info " style="cursor: pointer" onclick="ToPrintSafar2(@cc.Id)" target="_blank"><i class="lni lni-printer"></i> فیش گلاته</a>
                    }
                </td>
            </tr>
        }
        <tbody>
        </tbody>
    </table>
</div>
